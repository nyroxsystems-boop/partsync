{
    "name": "@partsync/desktop",
    "version": "1.0.0",
    "description": "PartSync Mac Menu Bar App",
    "author": "NyroxSystems",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "electron dist/main.js",
        "dev": "tsc && electron dist/main.js",
        "pack": "electron-builder --mac",
        "dist": "electron-builder --mac --publish never"
    },
    "dependencies": {
        "@partsync/shared": "1.0.0",
        "chokidar": "^3.6.0",
        "diff-match-patch": "^1.0.5",
        "socket.io-client": "^4.7.0",
        "electron-store": "^8.1.0",
        "auto-launch": "^5.0.6"
    },
    "devDependencies": {
        "@types/auto-launch": "^5.0.5",
        "@types/diff-match-patch": "^1.0.0",
        "electron": "33.3.1",
        "electron-builder": "^25.0.0",
        "typescript": "^5.3.0"
    },
    "build": {
        "appId": "com.nyroxsystems.partsync",
        "productName": "PartSync",
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "assets/icon.icns",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "files": [
            "dist/**/*",
            "assets/**/*",
            "src/renderer/**/*"
        ]
    }
}