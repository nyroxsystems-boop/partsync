{
    "name": "@partsync/desktop",
    "version": "1.0.0",
    "description": "PartSync Mac Menu Bar App",
    "author": "NyroxSystems",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "electron dist/main.js",
        "dev": "tsc && electron dist/main.js",
        "pack": "electron-builder --mac",
        "dist": "electron-builder --mac --publish never"
    },
    "dependencies": {
        "@partsync/shared": "1.0.0",
        "chokidar": "^3.6.0",
        "diff-match-patch": "^1.0.5",
        "socket.io-client": "^4.7.0",
        "electron-store": "^8.1.0",
        "auto-launch": "^5.0.6"
    },
    "devDependencies": {
        "@types/auto-launch": "^5.0.5",
        "@types/diff-match-patch": "^1.0.0",
        "electron": "33.3.1",
        "electron-builder": "^25.0.0",
        "typescript": "^5.3.0"
    },
    "build": {
        "appId": "com.nyroxsystems.partsync",
        "productName": "PartSync",
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "assets/icon.icns",
            "target": [
                "dmg",
                "zip"
            ],
            "identity": null,
            "entitlements": "entitlements.mac.plist",
            "entitlementsInherit": "entitlements.mac.plist",
            "hardenedRuntime": false
        },
        "files": [
            "dist/**/*",
            "assets/**/*",
            "src/renderer/**/*",
            "package.json",
            "!**/*.ts",
            "!**/*.map",
            "!**/test/**",
            "!**/tests/**",
            "!**/.git/**",
            "!**/node_modules/electron/**",
            "!**/node_modules/electron-builder/**",
            "!**/node_modules/@electron/**",
            "!**/node_modules/@types/**",
            "!**/node_modules/typescript/**",
            "!**/node_modules/app-builder-bin/**",
            "!**/node_modules/app-builder-lib/**",
            "!**/node_modules/7zip-bin/**",
            "!**/node_modules/dmg-builder/**",
            "!**/node_modules/better-sqlite3/**",
            "!**/node_modules/node-gyp/**",
            "!**/node_modules/config-file-ts/**",
            "!**/node_modules/socket.io/**",
            "!**/node_modules/@partsync/server/**",
            "!**/node_modules/@partsync/cli/**",
            "!**/node_modules/express/**",
            "!**/node_modules/prisma/**",
            "!**/node_modules/@prisma/**"
        ]
    }
}